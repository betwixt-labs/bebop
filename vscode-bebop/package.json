{
  "name": "bebop",
  "publisher": "betwixt",
  "displayName": "Bebop",
  "description": "Language support for the Bebop schema language.",
  "bugs": {
    "url": "https://github.com/betwixt-labs/bebop/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/betwixt-labs/bebop"
  },
  "icon": "images/icon.png",
  "license": "LICENSE.TXT",
  "version": "0.0.1",
  "author": "Betwixt Labs",
  "engines": {
    "vscode": "^1.66.0"
  },
  "categories": [
    "Debuggers",
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "keywords": [
    "multi-root ready",
    "proto",
    "json",
    "codegen",
    ".NET",
    "dotnet",
    "rust",
    "javascript",
    "typescript",
    "c++"
  ],
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "activationEvents": [
    "onLanguage:bebop"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configurationDefaults": {
      "[bebop]": {
        "editor.semanticHighlighting.enabled": true
      }
    },
    "languages": [
      {
        "id": "bebop",
        "aliases": [
          "Bebop",
          "bebop"
        ],
        "extensions": [
          ".bop"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "bebop.json",
          "*bebop.json"
        ],
        "url": "./schemas/bebop-schema.json"
      }
    ],
    "grammars": [
      {
        "language": "bebop",
        "scopeName": "source.bebop",
        "path": "./syntaxes/bebop.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.64.0",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "@vscode/test-electron": "^2.1.2",
    "esbuild": "^0.14.27",
    "eslint": "^8.9.0",
    "glob": "^7.2.0",
    "mocha": "^9.2.1",
    "typescript": "^4.5.5",
    "vscode-jsonrpc": "^4.0.0",
    "vscode-languageclient": "^7.0.0"
  }
}
